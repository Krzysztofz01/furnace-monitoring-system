{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        //"strict": true,
        "allowJs": true,
        //"experimentalDecorators": true,
        //"emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@repositories/*": [
                "src/repositories/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@views/*": [
                "src/views/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@utilities/*": [
                "src/utilities/*"
            ],
            "@server/server": [
                "src/server.ts"
            ],
            "@server/unit-of-work": [
                "src/unit-of-work.ts"
            ]
        }
    },
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules", "dist" ],
    "ts-node": {
        "require": [ "tsconfig-paths/register" ]
    }
}